---
title: about
pagination:
  data: locales 
  size: 1
  alias: locale
permalink: "{% if locale.slug %}{{ locale.slug }}/{% endif %}contact.html"
---

<section class="py-20 bg-light/30 border-b border-slate-100">
  <div class="max-w-6xl mx-auto px-4">
    <h1 class="text-4xl sm:text-5xl font-bold text-navy">{{ dict.contact.title }}</h1>
    <p class="mt-4 text-slate-700 max-w-2xl">{{ dict.contact.heroDesc }}</p>
  </div>
</section>

<section class="py-16">
  <div class="max-w-6xl mx-auto px-4 grid lg:grid-cols-3 gap-8">
    <div class="space-y-4">
      <div>
        <h2 class="font-semibold text-navy">{{ dict.common['address.label'] }}</h2>
        <p class="text-slate-700">{{ dict.common['address.text'] }}</p>
      </div>
      <div>
        <h2 class="font-semibold text-navy">{{ dict.common['phone.label'] }}</h2>
        <a dir="ltr" href="tel:+966595772053" class="text-slate-700 hover:underline">{{ dict.common['phone.text'] }}</a>
      </div>
      <div>
        <h2 class="font-semibold text-navy">{{ dict.common['email.label'] }}</h2>
        <a dir="ltr" href="mailto:{{ dict.common['email.text'] }}" class="text-slate-700 hover:underline">{{ dict.common['email.text'] }}</a>
      </div>
      <div>
        <h2 class="font-semibold text-navy">{{ dict.common['hours'] }}</h2>
        <p class="text-slate-700">{{ dict.common['hours.week'] }} Â· {{ dict.common['hours.weekend'] }}</p>
      </div>
      <a href="https://wa.link/yarwxp/" class="inline-block bg-gold text-navy px-4 py-2 rounded">{{ dict.common['cta.whatsapp'] }}</a>
    </div>

    <form class="lg:col-span-2 p-6 rounded-xl border border-slate-200 bg-white/70" name="contact">
      <div class="grid sm:grid-cols-2 gap-4">
        <label class="block">
          <span class="text-sm text-slate-600">{{ dict.contact.form.name }}</span>
          <input type="text" name="name" required class="mt-1 w-full rounded border-slate-300" />
        </label>
        <label class="block">
          <span class="text-sm text-slate-600">{{ dict.contact.form.email }}</span>
          <input type="email" name="email" required class="mt-1 w-full rounded border-slate-300" />
        </label>
        <label class="block sm:col-span-2">
          <span class="text-sm text-slate-600">{{ dict.contact.form.company }}</span>
          <input type="text" name="company" class="mt-1 w-full rounded border-slate-300" />
        </label>
        <label class="block sm:col-span-2">
          <span class="text-sm text-slate-600">{{ dict.contact.form.message }}</span>
          <textarea name="message" rows="5" required class="mt-1 w-full rounded border-slate-300"></textarea>
        </label>
      </div>
      <button type="submit" formaction="mailto:{{ dict.common['email.text'] }}" class="mt-4 bg-navy text-white px-5 py-3 rounded hover:opacity-90">
        {{ dict.contact.form.send }}
      </button>
    </form>
  </div>
</section>