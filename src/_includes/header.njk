
<header class="sticky top-0 z-50 bg-white/70 backdrop-blur border-b border-slate-100">
  <div class="mx-auto max-w-6xl px-4 py-3 flex items-center justify-between">
    <a href="/{{ locale.slug }}" class="flex items-center gap-2">
      <img src="/images/logo.png" width="150" height="45" />
    </a>
    <nav class="hidden md:flex items-center gap-6 text-sm">
      <a href="about" class="text-navy hover:text-gold">{{ dict.nav.about}}</a>
      <a href="services" class="text-navy hover:text-gold">{{ dict.services}}</a>
      <a href="clients" class="text-navy hover:text-gold">{{ dict.nav.clients}}</a>
      {# <a href="contact" class="text-navy hover:text-gold">{{ dict.nav.contact}}</a> #}
      {% for l in locales %}
        {% if l.code != locale.code %}
          <a href="{{ page.url | swapLang(locale, l) }}" dir="{{ l.dir }}" class="px-3 py-1 rounded border text-navy hover:bg-light">
            {{ l.label }}
          </a>
        {% endif %}
      {% endfor %}
    </nav>
    {# <a href="contact#form" class="md:inline-block hidden bg-gold text-white px-4 py-2 rounded hover:opacity-90">Book a Consultation</a> #}
    <button class="md:hidden" aria-label="Open Menu" onclick="document.getElementById('mnav').classList.toggle('hidden')">
      <svg class="w-6 h-6 text-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
    </button>
  </div>
  <!-- mobile nav -->
  <div id="mnav" class="md:hidden hidden border-t bg-white">
    <div class="max-w-6xl mx-auto px-4 py-3 space-y-2">
      <a href="about" class="block">{{ dict.nav.about }}</a>
      <a href="services" class="block">{{ dict.services }}</a>
      <a href="clients" class="block">{{ dict.nav.clients }}</a>
      {# <a href="contact" class="block">{{ dict.nav.contact }}</a> #}
      {% for l in locales %}
        {% if l.code != locale.code %}
          <a href="{{ page.url | swapLang(locale, l) }}" class="block" dir="{{ l.dir }}">
            {{ l.label }}
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</header>

