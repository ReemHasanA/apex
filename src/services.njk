{# --- CARDS GRID --- #}
<section class="max-w-6xl mx-auto px-4 py-10">
  <div class="grid md:grid-cols-2 gap-6">

    {# --- Card component --- #}
    {% macro serviceCard(id, iconName, title, bullets) %}
      <article id="{{ id }}" class="group rounded-2xl border border-slate-200 bg-white/70 backdrop-blur-sm overflow-hidden shadow-sm hover:shadow-md transition wow fadeInUp" data-wow-delay="0.5s">
        <header class="flex items-center gap-3 px-4 py-3 bg-navy/95 text-slate-100">
          <span class="inline-flex size-12 items-center justify-center rounded-xl ring-1 ring-white/10">
            {{ serviceIcon(iconName, 26) }}
          </span>
          <h2 class="text-lg sm:text-xl font-semibold">{{ title }}</h2>
        </header>

        <div class="p-6">
          {% if bullets and bullets.length %}
            <ul class="space-y-2 text-slate-700">
              {% for item in bullets %}
                <li class="flex gap-3">
                  {{ checkIcon() }}
                  <span>{{ item }}</span>
                </li>
              {% endfor %}
            </ul>
          {% endif %}

        </div>
      </article>
    {% endmacro %}

    {{ serviceCard("accounting", "accounting", dict.service.accounting.title, dict.service.accounting.bullets) }}
    {{ serviceCard("advisory", "advisory", dict.service.advisory.title, dict.service.advisory.bullets) }}
  </div>
</section>
