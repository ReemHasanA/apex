{% from "macros/serviceIcon.njk" import serviceIcon %}

{# --- HERO --- #}
<section class="relative border-b border-slate-100 mb-14">
  <div class="absolute inset-0 bg-[url('/images/view.png')] bg-cover bg-center"></div>
  <div class="absolute inset-0 bg-gradient-to-r from-white/90 via-white/70 to-white/30"></div>

  <div class="relative max-w-7xl mx-auto py-20 md:py-28">
    <div class="max-w-6xl mx-auto px-4 m-6">
      <p class="text-gold font-semibold">— {{ dict.slogan }}</p>
      <h1 class="text-4xl sm:text-5xl text-navy mt-2">{{ dict.services }}</h1>
      <p class="mt-4 text-slate-700 max-w-2xl">{{ dict.service.heroDesc }}</p>
    </div>

    {# CTA card: static on mobile, absolute on md+ #}
    <div class="m-6 md:mt-0 md:absolute md:end-6 md:top-6 md:max-w-md">
      <div class="rounded-xl border border-slate-200 p-6 sm:p-7 bg-white/80 backdrop-blur">
        <p class="text-sm text-slate-600">{{ dict.service.accounting.desc }}</p>
        <a href="https://wa.link/yarwxp/"
           class="mt-4 inline-block bg-gold text-navy text-base px-5 py-2.5 rounded hover:opacity-90">
          {{ dict.common['btn.requestQuote'] }}
        </a>
      </div>
    </div>
  </div>
</section>
{# --- CARDS GRID --- #}
<section class="max-w-6xl mx-auto px-4 py-10">
  <div class="grid md:grid-cols-3 gap-6">

    {# Small check icon (duotone) #}
    {% macro checkIcon() %}
      <svg class="mt-0.5 w-4 h-4" viewBox="0 0 24 24" fill="none" aria-hidden="true">
        <path d="M20 6L9 17l-5-5" stroke="#FFFFFF" stroke-width="3.2" stroke-linecap="round" stroke-linejoin="round" opacity=".98"/>
        <path d="M20 6L9 17l-5-5" stroke="var(--apx-gold, #D4AF37)" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    {% endmacro %}

    {# --- Card component --- #}
    {% macro serviceCard(id, iconName, title, bullets, desc, cta=false) %}
      <article id="{{ id }}" class="group rounded-2xl border border-slate-200 bg-white/70 backdrop-blur-sm overflow-hidden shadow-sm hover:shadow-md transition">
        <header class="flex items-center gap-3 px-4 py-3 bg-navy/95 text-slate-100">
          <span class="inline-flex size-12 items-center justify-center rounded-xl ring-1 ring-white/10">
            {{ serviceIcon(iconName, 26) }}
          </span>
          <h2 class="text-lg sm:text-xl font-semibold">{{ title }}</h2>
        </header>

        <div class="p-6">
          {% if bullets and bullets.length %}
            <ul class="space-y-2 text-slate-700">
              {% for item in bullets %}
                <li class="flex gap-3">
                  {{ checkIcon() }}
                  <span>{{ item }}</span>
                </li>
              {% endfor %}
            </ul>
          {% endif %}

          {# {% if desc %}
            <p class="mt-4 text-sm text-slate-600">{{ desc }}</p>
          {% endif %}

          {% if cta %}
            <a href="https://wa.link/yarwxp/"
               class="mt-5 inline-block bg-gold text-navy px-4 py-2 rounded hover:opacity-90">
              {{ dict.common['btn.requestQuote'] }}
            </a>
          {% endif %} #}
        </div>
      </article>
    {% endmacro %}

    {{ serviceCard("accounting", "accounting", dict.service.accounting.title, dict.service.accounting.bullets, "", true) }}
    {{ serviceCard("advisory", "advisory", dict.service.advisory.title, dict.service.advisory.bullets, dict.service.advisory.desc, false) }}
    {{ serviceCard("hr", "hr", dict.service.hr.title, dict.service.hr.bullets, dict.service.hr.desc, false) }}

  </div>
</section>

