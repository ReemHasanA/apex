<section class="py-20 bg-light/30 border-b border-slate-100">
  <div class="max-w-6xl mx-auto px-4">
    <p class="text-gold font-semibold">— {{ dict.slogan }}</p>
    <h1 class="text-4xl sm:text-5xl font-bold text-navy mt-2">{{ dict.about.title }}</h1>
    <p class="mt-4 text-slate-700 max-w-2xl">{{ dict.about.heroDesc }}</p>
  </div>
</section>

<section class="py-16">
  <div class="max-w-6xl mx-auto px-4 grid lg:grid-cols-3 gap-10">
    <div class="lg:col-span-2 space-y-6">
      <h2 class="text-2xl font-bold text-navy">{{ dict.about.who.title }}</h2>
      <p class="text-slate-700">{{ dict.about.who.body }}</p>
    </div>
    <div class="bg-white/70 rounded-xl border border-slate-200 p-6">
      <h3 class="font-semibold text-navy">{{ dict.about.values.title }}</h3>
      <ul class="mt-3 text-sm text-slate-600 space-y-2">
        {% for v in dict.about.values.items %}
          <li><span class="font-semibold">{{ v.title }}:</span> {{ v.body }}</li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>

<section class="py-16 bg-light/20 border-y border-slate-100">
  <div class="max-w-6xl mx-auto px-4 grid md:grid-cols-2 gap-10">
    <div>
      <h2 class="text-2xl font-bold text-navy">{{ dict.about.vision.title }}</h2>
      <p class="mt-3 text-slate-700">{{ dict.about.vision.body }}</p>
    </div>
    <div>
      <h2 class="text-2xl font-bold text-navy">{{ dict.about.objectives.title }}</h2>
      <p class="mt-3 text-slate-700">{{ dict.about.objectives.body }}</p>
    </div>
  </div>
</section>

<section id="team" class="py-20 bg-navy text-white">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold">{{ dict.about.team.title }}</h2>
    <div class="mt-10 grid md:grid-cols-3 gap-6">
      {% for m in dict.about.team.members %}
        <article class="p-6 rounded-xl bg-white/10 border border-white/10">
          <h3 class="font-semibold">{{ m.name }}</h3>
          <p class="text-sm opacity-80">{{ m.role }}</p>
          <p class="mt-3 text-sm opacity-90">{{ m.bio }}</p>
          <a href="mailto:{{ m.email }}" class="mt-3 inline-block underline">{{ m.email }}</a>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

