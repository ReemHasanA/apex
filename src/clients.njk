---
title: clients
pagination:
  data: locales
  size: 1
  alias: locale
permalink: "{% if locale.slug %}{{ locale.slug }}/{% endif %}clients.html"
---
{% from "macros/logoGrid.njk" import logoGrid %}
{% from "macros/checkIcon.njk" import checkIcon %}

<!-- HERO / INTRO -->
<section class="py-20 bg-light/30 border-b border-slate-100">
  <div class="max-w-6xl mx-auto px-4">
    <h1 class="text-4xl sm:text-5xl text-navy hd-underline
               wow fadeInUp"
        data-wow-duration="0.7s">
      {{ dict.clients.title }}
    </h1>
    <p class="mt-4 text-slate-700 max-w-2xl
              wow fadeInUp"
       data-wow-duration="0.7s" data-wow-delay="0.08s">
      {{ dict.clients.heroDesc }}
    </p>


    {# optional quick-scan chips (auto from industries) #}
    <ul class="mt-6 flex flex-wrap gap-2
               wow fadeInUp"
        data-wow-duration="0.6s" data-wow-delay="0.12s" aria-label="Industries">
      {% for ind in dict.clients.industries %}
        <li>
          <a href="#ind-{{ ind.title | slug }}"
             class="px-2.5 py-1 text-xs rounded-full bg-white border border-slate-200 text-slate-600 hover:text-navy hover:border-slate-300">
            {{ ind.title }}
          </a>
        </li>
      {% endfor %}
    </ul>

    <div class="mt-8 border-t border-slate-200 pt-6
                wow fadeInUp"
        data-wow-duration="0.6s" aria-label="Strategic partners">
      <p class="text-sm uppercase tracking-wide text-slate-500 mb-3">{{ dict.partners.title }}</p>
      <ul class="flex flex-wrap items-center gap-x-8 gap-y-4 partner-logos">
        {% for p in dict.partners.logos %}
          <li>
            <a href="{{ p.url }}" target="_blank" rel="noopener" class="inline-flex items-center">
              <img src="{{ p.src }}" alt="{{ p.alt or p.name }}" loading="lazy"
                  class="h-16 sm:h-20 w-auto object-contain">
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>

<!-- INDUSTRY CARDS + LOGOS -->
<section class="py-16">
  <div class="max-w-6xl mx-auto px-4 grid md:grid-cols-2 gap-6">
    {% for ind in dict.clients.industries %}
      <article id="ind-{{ ind.title | slug }}"
               class="p-6 rounded-2xl border border-slate-200 bg-white/80 backdrop-blur card-lift
                      wow rise-fade"
               data-wow-duration="0.7s"
               data-wow-delay="{{ (loop.index0 * 0.07) }}s">
        <header class="flex items-start gap-3">
          <div class="w-10 h-10 shrink-0 rounded-full bg-gold/15 text-gold flex items-center justify-center ring-1 ring-gold/20" aria-hidden="true">
            {# <!-- briefcase icon -->
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" class="w-5 h-5" stroke-width="1.8">
              <path d="M9 6V5a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2v1"></path>
              <rect x="3" y="6" width="18" height="13" rx="2"></rect>
              <path d="M3 12h18"></path>
            </svg> #}
            {{ checkIcon() }}
          </div>
          <div>
            <h3 class="text-lg text-navy">{{ ind.title }}</h3>
            <p class="mt-1 text-slate-700">{{ ind.body }}</p>
          </div>
        </header>

        {# logo grid (if any) #}
        <div class="mt-5 client-logos">
          {{ logoGrid(ind.logos) }}
        </div>
      </article>
    {% endfor %}
  </div>
</section>

<!-- CTA BAND -->
<section class="my-10">
  <div class="container mx-auto px-4">
    <div class="rounded-2xl border border-slate-200 bg-gradient-to-r from-slate-50 to-white shadow-sm overflow-hidden
                wow fadeInUp"
         data-wow-duration="2s"
         data-wow-offset="100">
      <div class="grid lg:grid-cols-[1fr_auto] items-center gap-6 p-6 md:p-10">

        <p class="text-xl sm:text-2xl text-slate-800 max-w-3xl
                  wow fadeIn{{ dict.css.start }}"
           data-wow-duration="2s"
           data-wow-delay="0.5s">
          {{ dict.clients.ctaTitle }}
        </p>

        <div class="flex flex-col sm:flex-row gap-3 sm:justify-end">
          <a href="https://wa.link/yarwxp/"
             class="inline-flex items-center justify-center rounded bg-gold px-5 py-3 font-medium hover:opacity-90 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-navy/60
                    wow zoomIn"
             data-wow-duration="1s"
             data-wow-delay="0.5s">
            {{ dict.common['cta.freeConsult'] }}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>