---
pagination:
  data: locales           # use the locales array
  size: 1
  alias: locale
permalink: "{% if locale.slug %}{{ locale.slug }}/{% endif %}index.html"
title: index
---


<!-- HERO -->
  
<section class="overflow-hidden py-24">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2">
      <div class="lg:pt-4 lg:pe-8">
        <div class="lg:max-w-lg">
          <h1 class="text-3xl sm:text-5xl lg:text-6xl font-bold leading-tight wow fadeInUp" wow-data-delay="0.5s">{{ dict.hero.title }}</h1>
          <div class="mt-6 flex gap-3 flex-row-reverse">
            <a href="https://wa.link/yarwxp/"
              class="bg-gold text-navy px-5 py-3 rounded hover:opacity-90">{{ dict.cta.book }}</a>
            <a href="{% if locale.slug %}/{{ locale.slug }}{% endif %}/services/"
              class="px-5 py-3 rounded border border-navy/30 hover:bg-navy/10">{{ dict.services }}</a>
          </div>
        </div>
      </div>
      <img width="2200" height="1081" src="/images/view.png" alt="main hero image" 
      class="w-3xl max-w-none rounded-xl shadow-xl ring-1 ring-gray-400/10 sm:w-228 md:-ms-4 lg:-ms-0 fadeIn{{ dict.css.end }} wow" wow-data-delay="1s" />
    </div>
  </div>
</section>


<!-- CTA -->
<section class="relative isolate overflow-hidden bg-navy py-24 sm:py-32">
  <img src="/images/sky.png" alt="skyscraper from bottom angel" class="absolute inset-0 -z-10 size-full object-cover object-right md:object-center opacity-10" />
  <div aria-hidden="true" class="hidden sm:absolute sm:-top-10 sm:right-1/2 sm:-z-10 sm:mr-10 sm:block sm:transform-gpu sm:blur-3xl">
    <div style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)" class="aspect-1097/845 w-274.25 bg-linear-to-tr from-gold to-navy opacity-20"></div>
  </div>
  <div aria-hidden="true" class="absolute -top-52 left-1/2 -z-10 -translate-x-1/2 transform-gpu blur-3xl sm:-top-112 sm:ml-16 sm:translate-x-0">
    <div style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)" class="aspect-1097/845 w-274.25 bg-linear-to-tr from-gold to-navy opacity-20"></div>
  </div>
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <h2 class="text-5xl font-semibold tracking-tight text-white sm:text-7xl fadeIn wow" data-wow-delay="0.5s">{{ dict.work.title }}</h2>
      <p class="mt-8 text-lg font-medium text-pretty text-gray-300 sm:text-xl/8 fadeIn wow" data-wow-delay="0.5s">{{ dict.work.desc }}</p>
    </div>
    <div class="mx-auto mt-10 max-w-2xl lg:mx-0 lg:max-w-none">
      <div class="grid grid-cols-1 gap-x-8 gap-y-6 text-base/7 font-semibold text-white sm:grid-cols-2 md:flex lg:gap-x-10">
        <a href="https://wa.link/yarwxp/" class="text-balance fadeIn{{ dict.css.start }} wow" data-wow-delay="0.5s"> {{ dict.cta.book }} <span aria-hidden="true" class="inline-block rtl:rotate-180">&rarr;</span></a>
        <a href="about" class="text-balance fadeIn{{ dict.css.start }} wow" data-wow-delay="1s"> {{ dict.cta.about }} <span aria-hidden="true" class="inline-block rtl:rotate-180">&rarr;</span></a>
        <a href="about#team" class="text-balance fadeIn{{ dict.css.start }} wow" data-wow-delay="1.5s"> {{ dict.cta.team }} <span aria-hidden="true" class="inline-block rtl:rotate-180">&rarr;</span></a>
      </div>
    </div>
  </div>
</section>

<!-- SERVICES SUMMARY -->
<section class="py-[15vmin] px-[7%]">
  <div class="px-4">
    <div class="w-full grid grid-cols-1 md:grid-cols-3 gap-4 text-center text-2xl lg:text-4xl">
      
      <!-- start -->
      <a href="services#accounting" class="block h-full mx-[2%] p-4 border rounded-3xl fadeInUp wow" data-wow-delay="0.3s">
        <span class="block leading-none text-navy text-balance">
        {{ dict.service.accounting.title }}
        </span>
      </a>
      <!-- center -->
      <a href="services#advisory" class="flex items-center justify-center h-full mx-[2%] p-4 border rounded-3xl fadeInUp wow" data-wow-delay="0.6s">
        <span class="block leading-none text-navy text-balance">
        {{ dict.service.advisory.title }}
        </span>
      </a>
      <!-- end -->
      <a href="services#hr" class="block h-full mx-[2%] p-4 border rounded-3xl fadeInUp wow" data-wow-delay="0.9s">
        <span class="block leading-none text-navy text-balance">
        {{ dict.service.hr.title }}
        </span>
      </a>
    </div>
  </div>
</section>

<section class="px-4">
  <div class="max-w-6xl mx-auto py-4 border-t-1 border-slate-200">
    <h2 class="text-xs font-semibold text-navy">{{ dict.service.q }}</h2>
    <p class="pt-8 text-lg text-slate-600 max-w-md indent-8">{{ dict.service.desc }}</p>
    <a href="services" class="mt-4 inline-block text-gold font-semibold hover:underline">{{ dict.cta.more }} ...</a>
  </div>
</section>

<section class="py-16 bg-light/30">
  <div class="max-w-6xl mx-auto px-4 grid lg:grid-cols-2 gap-8 items-start">
    <div class="wow fadeInUp">
      <h3 class="text-2xl font-bold text-navy">{{ dict.cta.office }}</h3>
      <p class="mt-2 text-slate-600">{{ dict.located }}</p>
      <ul class="mt-4 text-sm text-slate-600">
        <li>{{ dict.common["hours.week"] }}</li>
        <li>{{ dict.common["hours.weekend"] }}</li>
      </ul>
      <div class="mt-6 flex gap-3">
        <a href="https://wa.link/yarwxp/" class="bg-gold text-navy px-4 py-2 rounded hover:opacity-90">{{ dict.cta.book }}</a>
      </div>
    </div>
    <div class="rounded-xl overflow-hidden border border-slate-200 shadow-sm wow fadeInUp" data-wow-delay="0.1s">
      <iframe
        title="APEX Consultancy Location"
        src="https://www.google.com/maps?q=Olaya%20St%2C%20Al%20Akaria%203%2C%20Riyadh%2C%20Saudi%20Arabia&output=embed"
        width="100%" height="320" style="border:0;" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
  </div>
</section>
